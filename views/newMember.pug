doctype html
html
    head   
        title New Member
        meta(charset='utf-8')
        
    body
        div.header
            h1 
                a(href='/') HOME
        div
            h3 New Member!
            form(action="/newMember_process?team="+team+"&week="+week, method="post")
                p 이름
                    input(type='text' name='name' placeholder='홍길동' required)
                p 전화번호
                    input(type='text' name='phoneNumber' placeholder='000-0000-0000' required)
                p 주소
                    input(type='text' name='home' placeholder='인천시 미추홀구...')
                p 생일
                    input(type='number' name='year' min="1980" max="2020")
                    h 년 
                    input(type='number', name='month' min="1" max="12")
                    h 월 
                    input(type='number', name='date' min="1" max="31")
                    h 일
                p 조
                    input(type='text' name='team' value=team required)
                p 등록일
                    input(type='text' name='joinDate' value=week)
                p 기타 사항
                    br
                    textarea(name='specialInfo' placeholder='필요한 내용을 적어주세요')
                input(type='submit', value='저장')
        div.footer
    